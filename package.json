{
  "name": "synergy-ai-chatbot",
  "version": "1.0.0",
  "description": "AI-powered career consultation chatbot using the VALUE framework",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:react": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:react\"",
    "build": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm install && npm run install:frontend",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "concurrently": "^7.6.0"
  },
  "keywords": [
    "ai",
    "chatbot",
    "career",
    "consultation",
    "gpt"
  ],
  "author": "Damilola Bello",
  "license": "MIT"
}